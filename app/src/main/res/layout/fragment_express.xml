<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintRight_toLeftOf="@id/searchStation"-->
<!--                app:layout_constraintTop_toTopOf="parent" />-->


            <EditText
                android:id="@+id/etTrainNo"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:autofillHints=""
                android:background="@null"
                android:drawableEnd="@drawable/ic_clear"
                android:hint="@string/station_code"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/searchStation"
                app:layout_constraintStart_toEndOf="@+id/ivNetwork"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/searchStation"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_search_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnPrn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/pnr"
        android:textAlignment="textStart"
        android:paddingStart="55dp"
        app:icon="@drawable/ic_search"
        android:textColor="@color/primary"
        android:backgroundTint="@color/hallow_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnTicket"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btnTicket"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="@string/ticket"
        android:textAlignment="textStart"
        android:paddingStart="55dp"
        app:cornerRadius="0dp"
        app:icon="@drawable/ic_ticket"
        android:textColor="@color/primary"
        android:backgroundTint="@color/hallow_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnPrn" />

